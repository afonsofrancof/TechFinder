<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="categoria"
            type="com.example.techfinder.objects.Categoria" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/categoriaCard"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="6dp"

        app:cardBackgroundColor="@color/light_gray"
        >

        <TextView
            android:id="@+id/categoriaText"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:text="@{categoria.nomeCategoria}"
            categoria="@{categoria.nomeCategoria}"
            tools:text="Categoria"
            android:fontFamily="@font/outfit_semibold"
            android:textColor="@color/light_blue_pastel"
        />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>