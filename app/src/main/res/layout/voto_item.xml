<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="comentario"
            type="com.example.techfinder.objects.Comentario" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="2dp"
        android:backgroundTint="@color/white_bg"
        app:cardUseCompatPadding="false"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:shadowColor="@color/white_bg">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:id="@+id/categoria"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="20dp"

                android:fontFamily="@font/outfit_medium"
                android:textSize="20sp"
                tools:text="Computadores"

                />


            <ImageButton
                android:id="@+id/downvote"

                android:layout_width="36dp"
                android:layout_height="36dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="90dp"

                android:alpha="0.7"
                android:background="@drawable/ic_baseline_thumb_down_24"

                />


            <ImageButton
                android:id="@+id/upvote"

                android:layout_width="36dp"
                android:layout_height="36dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"

                android:alpha="0.7"
                android:background="@drawable/ic_outline_thumb_up_24"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>