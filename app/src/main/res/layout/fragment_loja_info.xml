<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <!--    <data>-->

    <!--        <variable-->
    <!--            name="comentario"-->
    <!--            type="" />-->
    <!--    </data>-->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="2dp"
            android:backgroundTint="#F4F4F4"
            app:cardUseCompatPadding="false"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/top_bar_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">



                <ImageButton
                        android:id="@+id/delete_post_button"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:paddingStart="8dp"
                        android:src="@drawable/delete_logo"
                        app:deleteButton="@{comentario.author.userId}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/gray"
                        tools:layout_editor_absoluteY="8dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="8dp"
                android:gravity="center|start"
                android:text="@{comentario.text}"
                android:textSize="16sp"
                android:fontFamily="@font/Outfit_ExtraLight"
                tools:text="@tools:sample/lorem[25]" />


        </com.google.android.material.card.MaterialCardView>



        <TextView

                android:id="@+id/nomeLoja"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@{comentario.loja}"
                android:fontFamily="@font/Outfit_Light"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="JOAQUIM ALBERTO"
                tools:layout_editor_absoluteY="3dp"
                tools:layout_editor_absoluteX="7dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>