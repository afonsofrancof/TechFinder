<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/username_input_layout"
        android:layout_marginLeft="-50dp"


        android:layout_marginBottom="100dp"
        android:text="TECHFINDER"
        android:textSize="50dp"
        android:fontFamily="@font/outfit_light"

        >

    </TextView>

    <ImageView
        android:id="@+id/logo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/separator2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="300dp"

        tools:src="@drawable/ic_baseline_send_24v2"
        android:scaleType="center"
        android:scaleY="0.85"
        android:scaleX="0.85"
        >

    </ImageView>

    <LinearLayout
        android:id="@+id/separator1"

        android:layout_width="380dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:orientation="horizontal"
        android:background="@drawable/separator"

        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/separator2"

        android:layout_width="380dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/appName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:orientation="horizontal"
        android:background="@drawable/separator"

        >

    </LinearLayout>







    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_input_layout"

        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/password_input_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:hint="Write your username here"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:gravity="center"

        app:shapeAppearanceOverlay="@style/Rounded"
        android:layout_marginVertical="8dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username_input"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:maxWidth="200dp"
            tools:text="example_username"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Write your password here"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintBottom_toTopOf="@id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/Rounded"
        android:layout_marginVertical="8dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_input"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxLength="25"
            tools:text="example_password">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/register_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="LOGIN"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        >

    </Button>
    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="45dp"
        android:text="REGISTER"
        android:textAlignment="center">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>